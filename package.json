{
  "name": "vite-hardhat",
  "description": "A template repository to get started with writing zero knowledge programs with Noir.",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "check:env": "bun run scripts/check-env.ts",
    "check:env:deploy": "bun run scripts/check-env.ts deploy",
    "check:env:fisher": "bun run scripts/check-env.ts fisher",
    "check:env:vite": "bun run scripts/check-env.ts vite",
    "deploy": "bun run check:env:deploy && bunx hardhat deploy --config hardhat.config.cts",
    "deploy:sepolia": "bun run check:env:deploy && ./deploy.sh",
    "deploy:sepolia:real": "bun run check:env:deploy && bunx hardhat run scripts/deploy-ultra-verifier.js --config hardhat.config.cts --network sepoliaEvvm && bunx hardhat run scripts/deploy-zkvvm.js --config hardhat.config.cts --network sepoliaEvvm",
    "start:fisher": "bun run check:env:fisher && bun --cwd=fisher index.ts",
    "vite:dev": "bun run check:env:vite && bun --filter vite dev",
    "dev": "bun run check:env:deploy && bun run deploy && bun run vite:dev",
    "test:up": "bun test ./tests/up.test.ts",
    "test:uh": "bun test ./tests/uh.test.ts",
    "test:contracts": "NODE_OPTIONS='--loader ts-node/esm' bunx hardhat test packages/contracts/test/**/*.test.ts --config hardhat.config.cts --network hardhat",
    "test": "bun test:up && bun test:uh && bun test:contracts",
    "node": "bunx hardhat node --config hardhat.config.cts",
    "gen-ciphertext": "bun run scripts/gen-ciphertext.ts"
  },
  "type": "module",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@types/bun": "^1.3.9",
    "@types/chai": "^5.2.3",
    "@types/chai-as-promised": "^8.0.2",
    "chai": "^6.2.2",
    "chai-as-promised": "^8.0.2",
    "concurrently": "^9.2.1",
    "hardhat": "2.19.2"
  },
  "dependencies": {
    "@aztec/bb.js": "^2.1.11",
    "@evvm/testnet-contracts": "^3.0.1",
    "@msgpack/msgpack": "^3.1.3",
    "@noir-lang/acvm_js": "1.0.0-beta.18",
    "@noir-lang/noir_js": "1.0.0-beta.18",
    "@noir-lang/noir_wasm": "1.0.0-beta.18",
    "@noir-lang/noirc_abi": "1.0.0-beta.18",
    "@noir-lang/types": "1.0.0-beta.18",
    "@nomicfoundation/hardhat-ethers": "^3.1.3",
    "@nomicfoundation/hardhat-ignition": "^0.15.16",
    "@nomicfoundation/hardhat-ignition-viem": "^0.15.16",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.2",
    "@nomicfoundation/hardhat-toolbox-viem": "3.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.3",
    "@nomicfoundation/hardhat-viem": "2.0.2",
    "@openzeppelin/contracts": "^5.4.0",
    "@types/mocha": "^10.0.10",
    "@types/shelljs": "^0.8.17",
    "commander": "^12.1.0",
    "dotenv": "^16.6.1",
    "fflate": "^0.8.1",
    "hardhat-gas-reporter": "^1.0.10",
    "hardhat-noirenberg": "0.2.0",
    "poseidon-solidity": "^0.0.5",
    "shelljs": "^0.8.5",
    "solidity-coverage": "^0.8.17",
    "typescript": "^5.9.3",
    "viem": "^2.46.2"
  },
  "overrides": {
    "@noir-lang/acvm_js": "1.0.0-beta.18",
    "@noir-lang/noir_js": "1.0.0-beta.18",
    "@noir-lang/noirc_abi": "1.0.0-beta.18",
    "@noir-lang/types": "1.0.0-beta.18"
  }
}

{
  "name": "zkvvm",
  "description": "Zero-Knowledge Virtual Machine - Privacy-preserving shielded pool with ZK proofs",
  "private": true,
  "workspaces": [
    "apps/*",
    "contracts",
    "circuits",
    "shared"
  ],
  "scripts": {
    "deploy": "bunx hardhat deploy",
    "dev": "bun --cwd apps/frontend dev",
    "dev:frontend": "bun --cwd apps/frontend dev",
    "build": "cd apps/frontend && bun run build",
    "start": "cd apps/frontend && bun run preview",
    "build:frontend": "bun --cwd apps/frontend run vite build",
    "build:circuits": "bun --cwd circuits run compile.ts",
    "test:up": "bun test ./tests/up.test.ts",
    "test:uh": "bun test ./tests/uh.test.ts",
    "test": "bun test:up && bun test:uh",
    "node": "bunx hardhat node",
    "gen-ciphertext": "bun run scripts/gen-ciphertext.ts"
  },
  "type": "module",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@types/bun": "^1.1.12",
    "hardhat": "^2.19.2",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "@aztec/bb.js": "0.63.1",
    "@evvm/testnet-contracts": "^3.0.1",
    "@noir-lang/noir_js": "1.0.0-beta.0",
    "@noir-lang/noir_wasm": "1.0.0-beta.0",
    "@noir-lang/types": "1.0.0-beta.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.6",
    "@nomicfoundation/hardhat-ignition": "^0.15.5",
    "@nomicfoundation/hardhat-ignition-viem": "^0.15.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.11",
    "@nomicfoundation/hardhat-toolbox-viem": "3.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.8",
    "@nomicfoundation/hardhat-viem": "2.0.2",
    "@openzeppelin/contracts": "^5.4.0",
    "@types/mocha": "^10.0.1",
    "@types/shelljs": "^0.8.7",
    "commander": "^12.1.0",
    "dotenv": "^16.0.3",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-noirenberg": "0.2.0",
    "poseidon-solidity": "^0.0.5",
    "shelljs": "^0.8.5",
    "solidity-coverage": "^0.8.5",
    "typescript": "^5.6.3",
    "viem": "^2.46.2"
  }
}
